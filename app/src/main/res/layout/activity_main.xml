<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <SeekBar
        android:id="@+id/seekBar_vertical_red"
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:progress="50"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <SeekBar
        android:id="@+id/seekBar_horizontal_green"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_vertical_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_vertical_green"
        app:layout_constraintVertical_bias="0.459" />

    <ImageView
        android:id="@+id/imageView_blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_horizontal_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_horizontal_green"
        app:layout_constraintVertical_bias="0.802"
        app:srcCompat="@drawable/blue" />

    <ImageView
        android:id="@+id/imageView_red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_horizontal_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@drawable/red" />

    <ImageView
        android:id="@+id/imageView_green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_horizontal_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_horizontal_red"
        app:layout_constraintVertical_bias="0.463"
        app:srcCompat="@drawable/green" />

    <SeekBar
        android:id="@+id/seekBar_vertical_green"
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:progress="50"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <ProgressBar
        android:id="@+id/progressBar_vertical"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="258dp"
        android:layout_height="18dp"
        android:layout_marginStart="228dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <SeekBar
        android:id="@+id/seekBar_horizontal_blue"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/progressBar_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_vertical_blue"
        app:layout_constraintVertical_bias="0.461" />

    <SeekBar
        android:id="@+id/seekBar_horizontal_red"
        android:layout_width="143dp"
        android:layout_height="25dp"
        android:progress="50"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_vertical_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_vertical_red"
        app:layout_constraintVertical_bias="0.459" />

    <SeekBar
        android:id="@+id/seekBar_vertical_blue"
        android:layout_width="130dp"
        android:layout_height="135dp"
        android:progress="50"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.813" />

    <ProgressBar
        android:id="@+id/progressBar_horizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="258dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_vertical_blue"
        app:layout_constraintVertical_bias="0.66" />

</androidx.constraintlayout.widget.ConstraintLayout>